@model UserUpdateViewModel
<input type="hidden" name="Id" value="@Model.Id" />
<input type="hidden" asp-for="Image.Id" />
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Kullanıcı Bilgilerini Görüntüleme</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="User" asp-action="Index">Kullanıcı İşlemleri</a></li>
                    <li class="breadcrumb-item active">Kullanıcı Bilgilerini Görüntüleme</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle"
                                 src="~/images/@Model.Image.Url"
                                 alt="User profile picture">
                        </div>

                        <h3 class="profile-username text-center">@Model.FirstName @Model.LastName</h3>

                        <p class="text-muted text-center">&#64;@Model.UserName</p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Doğum Tarihi</b> <a class="float-right">@Model.DateOfBirth</a>
                            </li>
                            <li class="list-group-item">
                                
                                <b>Email</b> <a class="float-right">@Model.Email
                                    
                                </a>
                            </li>
                            <li class="list-group-item">
                                <b>Email Onayı</b> <a class="float-right">
                                    @if (Model.EmailConfirmed)
                                    {
                                        <p class="text-success">Onaylı</p>
                                    }
                                    else
                                    {
                                        <p class="text-danger">Onaylı Değil</p>
                                    }
                                </a>
                            </li>
                        </ul>

                        <a href="#" class="btn btn-primary btn-block"><b>Follow</b></a>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <div class="col-md-9">
                <div class="card">

                    <div class="card-body">

                        <form class="form-horizontal">
                            
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" asp-for="Description"></label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" asp-for="Description" disabled></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" asp-for="Gender"></label>
                                <div class="col-sm-10">
                                    <input class="form-control" asp-for="Gender" disabled>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" asp-for="DateOfBirth"></label>
                                <div class="col-sm-10">
                                    <input class="form-control" asp-for="DateOfBirth" disabled>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" asp-for="City"></label>
                                <div class="col-sm-10">
                                    <input class="form-control" asp-for="City" disabled>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" asp-for="Place"></label>
                                <div class="col-sm-10">
                                    <input class="form-control" asp-for="Place" disabled>
                                </div>
                            </div>

                        </form>

                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
</section>


