@model AdvertListViewModel
@{
    List<AdvertViewModel> adverts = Model.Adverts;
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>İlan İşlemleri</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active">İlan İşlemleri</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">İlanları listeleme, düzenleme ve silme işlemleri yapabilirsiniz.</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">

                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Ders</th>
                                    <th>Öğretmen Adı</th>
                                    <th>İlan İsmi</th>
                                    <th>İlan Fiyatı</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var advert in adverts)
                                {
                                    @*<tr>
                                <td>@advert.Id</td>
                                <td>@advert.Lesson.Name</td>
                                <td>@advert.Teacher.User.FirstName @advert.Teacher.User.LastName.Substring(0,1)</td>
                                <td>@advert.Name</td>
                                </tr>*@
                                    <tr>
                                        <td style="height:30px;">@advert.Id</td>
                                        <td>@advert.Lesson.Name</td>
                                        <td>@advert.Teacher.User.FirstName @advert.Teacher.User.LastName</td>
                                        <td>@advert.Name</td>
                                        <td>@advert.Price TL</td>
                                        <td>
                                            <a class="btn btn-warning btn-sm"
                                           asp-area="Admin"
                                           asp-controller="Advert"
                                           asp-action="Edit"
                                           asp-route-id="@advert.Id">
                                                Düzenle
                                            </a>

                                            <a class="btn btn-danger btn-sm"
                                           asp-area="Admin"
                                           asp-controller="Advert"
                                           asp-action="Delete"
                                           asp-route-id="@advert.Id">
                                                Sil
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
@section Styles{
    @await Html.PartialAsync("_DataTablesStylesPartialView")
}
@section Scripts{
    @await Html.PartialAsync("_DataTablesScriptsPartialView")
}
