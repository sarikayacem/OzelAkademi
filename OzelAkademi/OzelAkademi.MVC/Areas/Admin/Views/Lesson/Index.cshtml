                                    <th width="240">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var lesson in lessons)
                                {
                                    @*<tr>
                                <td>@advert.Id</td>
                                <td>@advert.Lesson.Name</td>
