    List<LessonViewModel> lessons = Model.Lessons;
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Ders İşlemleri</h1>
            </div>
            <div class="col-sm-6">
